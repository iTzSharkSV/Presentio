{
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "Dist",
		"target": "ESNEXT",
		"strict": true,
		"pretty": true,
		"listFiles": false,
		"listEmittedFiles": false,
		"traceResolution": false,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"~/*": ["./*"],
			"@Mod/*": ["./Lib/Modules/*"]
		},
		"types": ["node", "jest"],
		"typeRoots": ["node_modules/@types", "./Lib/@Types"]
	},
	"include": ["Lib"]
}
