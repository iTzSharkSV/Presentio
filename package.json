{
	"name": "presentio",
	"version": "2.0.0",
	"description": "Cli-Info... in style!",
	"keywords": [
		"Cli",
		"Info",
		"Present-Info"
	],
	"main": "Build/Present.js",
	"type": "module",
	"files": [
		"Lib/**/*",
		"LICENSE",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"author": "Shorky <SharkSV@outlook.com> (https://github.com/iTzSharkSV)",
	"repository": "github:iTzSharkSV/Presentio-js",
	"license": "MIT",
	"scripts": {
		"test": "node Tests/Present.Test.js",
		"build": "tsc",
		"build:dev": "tsc --watch",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"prepare": "husky install"
	},
	"prettier": {
		"trailingComma": "none",
		"arrowParens": "always",
		"singleQuote": true,
		"printWidth": 80,
		"useTabs": true,
		"tabWidth": 4,
		"semi": true
	},
	"devDependencies": {
		"@types/node": "^17.0.21",
		"husky": "^7.0.0",
		"prettier": "^2.5.1",
		"typescript": "^4.6.2"
	}
}
